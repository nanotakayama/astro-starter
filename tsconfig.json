{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "~/*": ["src/*"],
      "@scripts/*": ["src/assets/scripts/*"],
      "@components/*": ["src/components/*"],
      "@layouts/*": ["src/layouts/*"],
      "@site/*": ["src/_data/*"],
      "@pages/*": ["src/pages/*"],
      "@styles/*": ["src/assets/styles/*"]
    },
    "plugins": [
      {
        "name": "@astrojs/ts-plugin"
      },
    ]
  }
}
